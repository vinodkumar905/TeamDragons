@model proj.Models.LandFill
@{
    ViewData["Title"] = "Edit Land Fill";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Land Fill</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        /* Your existing styles here */
    </style>
</head>
<body>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h2 class="text-center">Edit Land Fill</h2>
                <form asp-controller="LandFill" asp-action="EditLandfill" method="post" class="form-horizontal">
                    <input type="hidden" asp-for="landfill_id" />

                    <div class="form-group">
                        <label class="control-label">Land Fill Date</label>
                        <input asp-for="Landfill_Date" class="form-control" type="date" required />
                        <span asp-validation-for="Landfill_Date" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label class="control-label">Weight In Lbs</label>
                        <input asp-for="weight_In_Lbs" class="form-control" type="number" required />
                        <span asp-validation-for="weight_In_Lbs" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label class="control-label">Expense In USD</label>
                        <input asp-for="Expense_In_Usd" class="form-control" type="number" required />
                        <span asp-validation-for="Expense_In_Usd" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label class="control-label">Landfill / Hauler (Name of Company)</label>
                        <input asp-for="LANDFILL_HAULER_NAME" class="form-control" type="text" required />
                        <span asp-validation-for="LANDFILL_HAULER_NAME" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Update" class="btn btn-primary btn-block" />
                    </div>
                </form>

                @if (TempData["msg"] != null)
                {
                    <div class="alert alert-success" role="alert">
                        @TempData["msg"]
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
