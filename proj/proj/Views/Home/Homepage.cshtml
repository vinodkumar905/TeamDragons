@{
    ViewData["Title"] = "Recycle management";
}

@section Styles {
    <link rel="stylesheet" href="~/css/homepage.css" asp-append-version="true" />
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Recycle System</title>
    <link rel="stylesheet" href="assets/css/style.css">
</head>
<body>
    <!-- Header Section -->
    <header class="header">
        <nav class="navbar">
            <!-- Logo Image -->
            <div class="logo">
                <img src="~/images/recyl.jpg" alt="Recycle Logo"> <!-- Replace with your logo image -->
            </div>

            <ul class="nav-links">
                <li><a href="#" class="btn">Home</a></li> <!-- Home Button -->
                <li><a href="#" class="btn">Contact Us</a></li> <!-- Contact Us Button -->
                <li class="reveal-block">
                    <a asp-controller="Home" asp-action="Index1" class="btn">Admin Login</a> <!-- Admin Login Button -->
                </li>
                <li class="reveal-block">
                    <a asp-controller="Home" asp-action="Userlogin" class="btn">User Login</a> <!-- User Login Button -->
                </li>
            </ul>
        </nav>
    </header>

    <!-- Image Section (Background Image) -->
    <div class="image-section">
        <!-- Background Image will cover the whole section -->
    </div>

    <!-- Middle Content Section -->
    <section class="content-section">
        <h2>About This System</h2>
        <p>
            Our recycling platform connects individuals and businesses with waste management services.
            From plastic recycling to organic waste solutions, we make the process easy and efficient.
            Users can schedule pickups, track their waste disposal, and do their part in preserving the environment.
        </p>
    </section>

    <!-- Footer Section -->
    <footer class="footer">
        <div class="footer-details">
            <h3>Contact Us</h3>
            <p>Waste Management Services</p>
            <p>Email: info@recyclesystem.com</p>
            <p>Phone: +123-456-7890</p>
        </div>
    </footer>
</body>
</html>
